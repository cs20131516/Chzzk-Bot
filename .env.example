# 치지직 API 자격 증명
CHZZK_CLIENT_ID=your_client_id_here
CHZZK_CLIENT_SECRET=your_client_secret_here
CHZZK_CHANNEL_ID=target_channel_id

# Ollama 설정
OLLAMA_MODEL=qwen3:8b
OLLAMA_HOST=http://localhost:11434
OLLAMA_KEEP_ALIVE=10m
# 모델을 메모리에 유지하는 시간 (10m, 1h, -1=영구)

# LLM 생성 설정
LLM_MAX_TOKENS=200
# 최대 생성 토큰 수 (qwen3 사고 토큰 포함, 한국어 응답은 후처리로 추출)
LLM_NUM_CTX=2048
# 컨텍스트 윈도우 크기 (작을수록 빠름)

# ASR 설정
ASR_MODEL=Qwen/Qwen3-ASR-0.6B

# 오디오 설정
AUDIO_SAMPLE_RATE=48000
AUDIO_CHUNK_DURATION=5
# 몇 초마다 음성 인식 수행할지 (3~5 권장)

# 채팅 설정
MIN_SPEECH_LENGTH=3
# 최소 몇 초 이상 말해야 응답할지
RESPONSE_COOLDOWN=10
# 응답 후 몇 초 동안은 새 응답 안 함
RESPONSE_CHANCE=1.0
# 응답 확률 (0.0~1.0, 예: 0.5면 50% 확률로 응답)
SMART_RESPONSE=false
# true면 LLM이 응답할 가치가 있는지 먼저 판단
RESPONSE_MODE=ai
# 응답 모드: ai (LLM 응답) / mimic (채팅 따라하기)
WARMUP_SECONDS=0
# 시작 후 채팅/방송 관찰 시간 (초, 0=바로 시작, 180=3분 관찰)
